    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="<KEY>" crossorigin="anonymous">
</head>
<nav class="navbar navbar-expand-lg navbar-dark bg-black w-100">



    <a class="navbar-brand" asp-controller="Home" asp-action="Index">Stonyhill Medical</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav align-items-center">

            <li class="nav-item dropdown">

        
                <a class="nav-link dropdown-toggle" asp-controller="Home" id="homeDropdown" asp-action="Index" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-home"></i> Home
                </a>
                <div class="dropdown-menu" aria-labelledby="homeDropdown">
                    <a class="dropdown-item" href="#features"><i class="fas fa-info"></i> Features</a>
                    <a class="dropdown-item" href="#support"><i class="fas fa-info"></i> Support</a>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Appointment" asp-action="Index"><i class="fas fa-heart"></i> Appointments</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Doctor" asp-action="Index"><i class="fas fa-stethoscope"></i> Doctor</a>
            </li>
            <li class="nav-item">
                <a class= "nav-link" asp-controller="Patient" asp-action="Index"><i class="fas fa-envelope"></i> Patient</a>
            </li>

            <div class="theme-toggle">
                <button onclick="toggleTheme()" class="Nav-btn">Toggle Theme</button>
            </div>
        </ul>
    </div>
</nav>





<script>
    const sections = document.querySelectorAll(".section");
    const navbarLinks = document.querySelectorAll(".navbar a");

    // Add event listeners for each navigation link
    navbarLinks.forEach((link) => {
        link.addEventListener("click", () => {
            const targetId = link.getAttribute("href").substring(1);
            const targetSection = document.getElementById(targetId);
            targetSection.scrollIntoView({ behavior: "smooth" });
        });
    });

    // Add scroll snap behavior to the sections
    sections.forEach((section) => {
        section.style.scrollSnapType = "y mandatory";
    });



</script>

