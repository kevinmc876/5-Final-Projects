@model IEnumerable<Interface.Models.Patient>

@{
    ViewData["Title"] = "Patients";
}




<head>
    <link rel="stylesheet" href="~/css/Page.css" asp-append-version="true" />

</head>

<section class="container">

    <h1> List of @ViewData["Title"] </h1>
    <button class="btn action-button"><a asp-action="Create">Create New</a>  </button>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelephoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reason)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelephoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reason)
                    </td>
                    <td>
                        <div class="button-container">
                            <button class="action-button ">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                            </button>
                            <button class="action-button">
                                @Html.ActionLink("Details", "Details", new { id = item.Id })
                            </button>
                            <button class="action-button">
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>



