@model InventoryInterface.Models.Products

@{
    ViewData["Title"] = "Details";
}


<div class=" container py-lg-1">
    <div id="content">
        <section>
            <h1>Details</h1>

            <div class="container">
                <h4>Product Details</h4>
                <hr />

                <div class="row">
                    <div class="col-md-4">
                        <img src="@Model.Image" style="max-width: 100%;" />
                    </div>
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                            <dd class="col-sm-9">@Model.Name</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CategoryId)</dt>
                            <dd class="col-sm-9">@Model.Category.Name</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SizeId)</dt>
                            <dd class="col-sm-9">@Model.Size.Name</dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Quantity)</dt>
                            <dd class="col-sm-9">@Model.Quantity</dd>
                        </dl>
                    </div>
                </div>
            </div>

            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            <a asp-action="Index">Back to List</a>
        </section>
    </div>


</div>

