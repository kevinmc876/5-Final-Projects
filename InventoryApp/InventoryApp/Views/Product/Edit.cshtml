@model InventoryInterface.Models.ProductVM

@{
    ViewData["Title"] = "Edit";
}


<div class="container">

<h1>Edit</h1>

<h4>ProductVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" hidden />



            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedCategory" class="control-label"></label>
                <select asp-for="SelectedCategory" class="form-control" asp-items="@Model.CategoryList">
                    <option disabled>Select Category</option>
                </select>
                <span asp-validation-for="SelectedCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedSize" class="control-label"></label>
                <select asp-for="SelectedSize" class="form-control" asp-items="@Model.SizeList">
                    <option disabled>Select Size</option>
                </select>
                <span asp-validation-for="SelectedSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

 </div>