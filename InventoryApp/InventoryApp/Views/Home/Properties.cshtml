@{
}


<style>
  
        /* Styles for h1 in header */
        header h1 {
            margin: 0;
            color: #333;
        }

    /* Styles for container */
    .container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
    }

        /* Styles for h2 in container */
        .container h2 {
            margin-top: 20px;
        }

    /* Styles for sizes */
    .sizes {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    /* Styles for each size */
    .size {
        padding: 10px;
        background-color: #ddd;
        border-radius: 5px;
    }

    /* Styles for categories */
    .categories {
        display: flex;
        justify-content: space-between;
    }

    /* Styles for each category */
    .category {
        flex: 1;
        padding: 10px;
        background-color: #f5f5f5;
        border-radius: 5px;
    }

        /* Styles for h3 in category */
        .category h3 {
            margin-top: 0;
            color: #444;
        }

        /* Styles for ul in category */
        .category ul {
            list-style: none;
            padding-left: 0;
        }

        /* Styles for li in category */
        .category li {
            margin-bottom: 5px;
        }



</style>





<header>
    <h1>Welcome to Ashley's Store - Operation House</h1>
</header>

<div class="container">
    <h2>Sizes Available</h2>
    <div class="sizes">
        <div class="size">Small</div>
        <div class="size">Medium</div>
        <div class="size">Large</div>
    </div>

    <h2>Categories for Men and Women</h2>
    <div class="categories">
        <div class="category men">
            <h3>Men's</h3>
            <ul>
                <li>Hats</li>
                <li>Shirts</li>
                <li>Shoes</li>
            </ul>
        </div>
        <div class="category women">
            <h3>Women's</h3>
            <ul>
                <li>Hats</li>
                <li>Shirts</li>
                <li>Dresses</li>
                <li>Shoes</li>
            </ul>
        </div>
    </div>
</div>
