@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
</head>


<div class="HomePage">

    <div id="carouselExampleIndicators"
         class="carousel slide w-100"
         data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators"
                data-slide-to="0"
                class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <!-- Add more li elements according to the number of images -->
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://images.unsplash.com/photo-1597305877032-0668b3c6413a?q=80&w=1964&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                     class="d-block w-100"
                     alt="Image 1" />
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1525279844598-52fd0d3fecc2?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                     class="d-block w-100"
                     alt="Image 2" />
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1615835624373-a8a9b2468af1?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                     class="d-block w-100"
                     alt="Image 3" />
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1473081556163-2a17de81fc97?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                     class="d-block w-100"
                     alt="Image 4" />
            </div>
            <!-- Add more divs with "carousel-item" class for additional images -->
        </div>
        <a class="carousel-control-prev"
           href="#carouselExampleIndicators"
           role="button"
           data-slide="prev">
            <!-- <span class="carousel-control-prev-icon" aria-hidden="true"></span> -->
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next"
           href="#carouselExampleIndicators"
           role="button"
           data-slide="next">
            <!-- <span class="carousel-control-next-icon" aria-hidden="true"></span> -->
            <span class="sr-only" hidden>Next</span>
        </a>
    </div>

    <div class="Center-text">
        <h1>Discover the Joy of Plant Adoption</h1>
        <p>At Botanic Bliss, Find Your Green Companion</p>
        <button type="button" class="Center-text-btn">Explore Now</button>
    </div>

</div>