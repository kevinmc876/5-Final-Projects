@model IEnumerable<AmberEnrollmentInterface.Models.Students>

@{
    ViewData["Title"] = "Index";
}

<style>
    Button, button a {
    color:white;
    text-decoration: none;
    list-style:none;

    }


        Button, button a:hover {
            color: yellow;
            text-decoration: none;
            list-style: none;
        }
</style>

<div class="container">


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shirt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parish.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Programs.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shirt.Name)
            </td>
            <td>
                   <button class="btn btn-primary">
                            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) 
                   </button>
                        <button class="btn btn-primary">
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) 

                   </button>
                    <button class="btn btn-primary">
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                   </button>
            </td>
        </tr>
}
    </tbody>
</table>

 </div>